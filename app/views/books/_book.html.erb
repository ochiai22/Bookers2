<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "col-md-12" %>
	</div>
	
  <div class="form-group">
  	<%= f.label :Opinion %>
    <%= f.text_area :body, class: "col-md-12" %>
  </div>
	
  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>