<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', users: @users %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, book %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>